<div class="panel panel-default">
  <div class="panel-heading"> <strong class="">Your answer</strong></div>
  <div class="panel-body">
    <%= form_for @answer, url: question_answers_path(@question), method: :post, :html => {:class => "form-horizontal"} do |f| %>
    
    <%= render partial: "shared/errors", locals: {object: @answer} %>
    
    <div class="form-group">
      <%= f.text_area :content, class: "form-control", placeholder: "Your answer", rows: 10 %>
    </div>
  
    <div class="form-group">
      <div class="col-md-10">
        <%= f.submit "Submit", class: "btn btn-default btn-primary"%>
      </div>
    </div>
    
    <% end %>
  </div>
</div>