<% #FIXME_AB: use content_for tag to include js in html head -%>
<%= javascript_include_tag 'question_publish' %>

<h3> QUestions history</h3>
<table class="table table-striped table-hover ">
  
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Status</th>
      <th>Publish</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.questions.order(created_at: :desc).each_with_index do |question, index|%>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= link_to question.title, question_path(question) %></td>
      <td><p data-behavior = "unpublished-status" class= <%= question.published? ? "hidden" : " "%>  >Draft </p>
      <p data-behavior = "published-status" class= <%= question.published? ? "" : "hidden"%>  >Published </p>
    </td>
    <td><%= link_to "Publish", publish_path(question), remote: true,format: :json, data: {behavior: "publish"}, class: question.published? ? "hidden": ""  %>
      <%= link_to "Unpublish", unpublish_path(question), remote: true,format: :json, data: {behavior: "unpublish", confirm: "Do you want to unpublish?"}, class: question.published? ? "": "hidden"  %>
      <div class="spinner"></div>
    </td>
    <td><%= question.created_at.to_date%></td>
   </tr>
   <%end %>
  </tbody>
</table>