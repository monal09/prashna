<% if !(signed_in?)%>
 
<div class="container-fluid">
    <div class="row col-lg-8 col-lg-offset-4">
        <div class="col-lg-3">
            <h3>Existing User</h3>
          <p>Click below to login</p>
            <%= button_to "Login", login_path, method: :get, class: "btn btn-primary btn-lg" %>
            </br>
            <%=link_to("Forgot Password", new_password_request_path)%>
        </div>
        <div class="col-lg-3">
            <h3>New User</h3>
          <p>Click below to sign up</p>
          <%= button_to "Sign Up", new_user_path, method: :get, class: "btn btn-primary btn-lg" %>
        </div>
    </div>
</div>

<% end %>

<% if signed_in?%>
  <%=link_to("Check your credit history", user_credit_transactions_path(current_user))%>
<%end%>