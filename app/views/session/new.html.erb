
  <%= form_tag(login_path, method: :post, class: "form-horizontal") do %>
    <fieldset>
    <legend>Please Log In</legend>
      
    <div class="form-group">
      <%= label_tag :email, 'Email:', class: "col-md-2 control-label" %>
      <div class="col-md-8">
        <%= email_field_tag :email, params[:email], class: "form-control", placeholder: "Email" %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :password, 'Password:', class: "col-md-2 control-label" %>
      <div class="col-md-8">
        <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Password" %>
        <%= check_box_tag :remember_me%>
        <%= label_tag :remember_me, 'Rememeber Me'%>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-md-8 col-md-offset-5">
        <%= submit_tag "Login", class: "btn btn-default btn-primary" %>
      </div>
    </div>

    </fieldset>
  <% end %>

