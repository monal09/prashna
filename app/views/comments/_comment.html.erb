<blockquote class="blockquote">
	<p><%= simple_format comment.comment %></p>
	<small>by <cite title="Source Title"><%= comment.user ?  (link_to comment.user.first_name, user_path(comment.user)) : "Deleted User"%></cite></small>	
	<%= render partial: "comments/vote_link", locals: { comment: comment}%>	
</blockquote>