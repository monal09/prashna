<tr>
  <td><%= user_counter + 1%></td>
  <td><%=user.first_name%></td>
  <td><%=user.last_name%></td>
  <td><%=user.admin? ? "Yes" : "No"%></td>
  <td><%= user.verified? ? "verified" : "not verified"%></td>
  <td><%= link_to "Disable", disable_admin_user_path(user), method: :post if !user.disabled? %>
      <%= link_to "Enable", enable_admin_user_path(user), method: :post if user.disabled? %>
  </td>
</tr>