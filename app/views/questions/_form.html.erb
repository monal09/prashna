<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading"> <strong class="">Ask Question</strong>
        </div>
        <div class="panel-body">
          
          <%= form_for @question, :html => {:class => "form-horizontal"} do |f| %>
          
          <%= render partial: "shared/errors", locals: {object: @question} %>
          
          <div class="form-group">
            <%= f.label :title, "Title", class: "col-md-2 control-label required" %>
            <div class="col-md-8">
              <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :content, "Content", class: "col-md-2 control-label required" %>
            <div class="col-md-8">
              <%= f.text_area :content, class: "form-control", placeholder: "Content", rows: 10 %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :pdf, "Attach pdf", class: "col-md-2 control-label" %>
            <div class="col-md-8">
            <% if @question.pdf.present?%>
              You have uploaded <%= link_to @question.pdf_file_name, @question.pdf.url %>.
              Select new file below to replace it.
            <%end%>
             </br>
              <%= f.file_field :pdf, class: "form-control"%>
              <small>Maximum file size allowed is 2 MB.</small>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :associated_topics, "Topic", class: "col-md-2 control-label" %>
            <div class="col-md-8">
              <%= f.text_field :associated_topics, class: "form-control", placeholder: "Topics", value: @question.get_topics_list(params[:question]) %>
              <small>You can enter multiple comma separated topics.</small>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-9">
              <div class="checkbox">
                <label class="">
                <%= f.check_box :published%>Publish Immediately</label>
              </div>
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-md-10 col-md-offset-5">
              <%= f.submit "Submit", class: "btn btn-default btn-primary"%>
            </div>
          </div>
          
        </fieldset>
        <% end %>
        
      </div>
    </div>
  </div>
</div>
</div>