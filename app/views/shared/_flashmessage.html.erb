<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible">
    <p><%= flash[:notice] %></p>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-dismissible alert-warning">
    <p><%= flash[:alert] %></p>
  </div>
<% end %>

<% if flash[:errors] %>
  <div class="alert alert-dismissible alert-danger">
    <p><%= flash[:errors] %></p>
  </div>
<% end %>

